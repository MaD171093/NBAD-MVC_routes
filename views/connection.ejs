<!DOCTYPE html>
<html lang="en" dir="ltr">
  <% include partials/head.ejs %>

  <body>

    <% include partials/header.ejs %>

    <div class="container">
      <div class="row content-connection">
        <h5><%=details.connectionName; %></h5>
        <div class="four columns">
          <img id="profile" src="assets/images/profile.JPG" alt="Profile picture">
          <p>Hosted by MaD Tech Integrator <br> <%=details.dateTime[0]; %> <br> <%=details.dateTime[1]; %> <br><%=details.location; %> </p>
        </div>
        <div class="four columns">
          <p>Are you going? 10 people are going.... </p>
          <form  class="button-line" action="savedConnections" method="post">
            <input class="button-primary" id="green" type="submit" value="Yes">
            <input class="button-primary" id="red" type="submit" value="No">
            <input class="button-primary" id="blue" type="submit" value="Maybe">
          </form>
        </div>
      </div>
      <div class="row content-connection">
        <h5>Detail</h5>
        <div class="three columns">
          <p><%=details.details; %></p>
        </div>
      </div>
    </div>

    <% include partials/footer.ejs %>

  </body>
</html>
